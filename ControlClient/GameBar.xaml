<Window x:Class="ControlClient.GameBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        AllowsTransparency="True"
        Background="{x:Null}"
        WindowStyle="None"
        Width="70"
        ShowInTaskbar="False"
        Height="600">
    <Border BorderThickness ="5" BorderBrush ="Blue" CornerRadius ="10,10,10,10">
        <Grid >
            <Grid Background="White">
                <Image Name="RefreshGame" Source="img/refresh.png" VerticalAlignment="Top" Width="30" Height="30" MouseLeftButtonUp="RefreshGame_MouseLeftButtonUp"/>
                <ScrollViewer HorizontalAlignment="Stretch" Margin="0,35,0,35" VerticalAlignment="Stretch" >
                    <StackPanel Name="gameContainer" Orientation="Vertical"  Margin="0,0,0,0" HorizontalAlignment="Left" Width="auto" Height="auto">
                    </StackPanel>
                </ScrollViewer>
                <Image Name="CloseBar" Source="img/closeBar.png" VerticalAlignment="Bottom" Width="30" Height="30" MouseLeftButtonUp="CloseBar_MouseLeftButtonUp"/>
            </Grid>
        </Grid>
    </Border>

</Window>
